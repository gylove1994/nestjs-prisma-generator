{
	"name": "@gylove1994/npg",
	"version": "0.1.0",
	"description": "A command line tool for nestjs-prisma code generation",
	"main": "index.js",
	"scripts": {
		"lint": "biome check --write ./src",
		"dev": "nodemon --watch src --ext ts --exec \"rimraf dist && tsc && cp .env dist\"",
		"build": "rimraf dist && tsc",
		"publish": "npm run build && npm publish --access public"
	},
	"files": ["dist", "README.md", "LICENSE"],
	"bin": {
		"npg": "./dist/index.js"
	},
	"keywords": [
		"nestjs",
		"prisma",
		"generator",
		"cli",
		"nestjs-prisma-generator",
		"@gylove1994/nestjs-prisma-generator"
	],
	"author": "gylove1994",
	"homepage": "https://github.com/gylove1994/nestjs-prisma-generator",
	"repository": {
		"type": "git",
		"url": "https://github.com/gylove1994/nestjs-prisma-generator.git"
	},
	"license": "MIT",
	"dependencies": {
		"@angular-devkit/core": "^18.2.5",
		"@mrleebo/prisma-ast": "^0.12.0",
		"chalk": "4",
		"commander": "^12.1.0",
		"dotenv": "^16.4.5",
		"fs-extra": "^11.2.0",
		"inquirer": "^11.0.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.2",
		"@nestjs/swagger": "^7.4.2",
		"@types/fs-extra": "^11.0.4",
		"nodemon": "^3.1.7",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2"
	}
}
