{
	"exclude": ["node_modules", "dist", "test-playground"],
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"rootDir": "./src",
		"baseUrl": "./",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
